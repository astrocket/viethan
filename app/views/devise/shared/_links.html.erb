<%- if controller_name != 'sessions' %>
  <%= link_to t(".sign_in"), new_session_path(:user) %><br />
<% end -%>

<%- if Devise.mappings[:user].registerable? && controller_name != 'registrations' %>
  <%= link_to t(".sign_up"), new_registration_path(:user) %><br />
<% end -%>

<%- if Devise.mappings[:user].recoverable? && controller_name != 'passwords' %>
  <%= link_to t(".forgot_your_password"), new_password_path(:user) %><br />
<% end -%>

<%- if Devise.mappings[:user].confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('.didn_t_receive_confirmation_instructions'), new_confirmation_path(:user) %><br />
<% end -%>

<%- if Devise.mappings[:user].lockable? && User.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('.didn_t_receive_unlock_instructions'), new_unlock_path(:user) %><br />
<% end -%>
