      <%= link_to t('chat.category_all'), '?category=all', class: 'nav-link' %>
    </li>
    <li class="nav-item <%= params[:category] == '1' ? 'active' : '' %>">
      <%= link_to t('chat.category_1'), '?category=1', class: 'nav-link' %>
