<%= simple_form_for(@chat, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :room_title, label: t('chat.room_title') %>
    <%= f.input :category, label: t('chat.category'), collection: [["#{t('chat.category_1')}", 1], ["#{t('chat.category_2')}", 2], ["#{t('chat.category_3')}", 3]] %>
    <%= f.input :anonymous, label: t('chat.anonymous') %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
